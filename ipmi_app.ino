void ipmi_app_auth_capa(byte *srcip, word port) {
  Serial.print("  Returning Auth Capabilities...");

  char reply[] = {
    0x06, 0x00, 0xff, 0x07,
    0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x10,
    0x81, 0x1c, 0x63, 0x20, 0x04, 0x38, 0x00, 0x00, 0x15, 0x07, 0x01, 0x00, 0x00, 0x00, 0x00, 0x87
  };
  ether.sendUdp(reply, sizeof(reply), RMCP_UDP_PORT, srcip, port );
  Serial.println(" Done.");
}
